@{
    ViewData["Title"] = "Delete";
    ViewData["SubTitle"] = Model?.GetType()?.Name?.Replace("Page", string.Empty) ?? "Unspecified";  
    Layout = "_Layout";
    var itemId = "";
    var str = Model?.GetType()?.Name?.Replace("Page", string.Empty) ?? "Unspecified";
    itemId = Model?.ItemId ?? string.Empty;
     
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@ViewData["SubTitle"]</h4>
    @RenderBody()
    <form method="post" 
        asp-route-id="@itemId"
        asp-route-handler="Delete"
        asp-route-order="@Model.CurrentSort"
        asp-route-idx = "@Model.PageIndex"
        asp-route-filter="@Model.CurrentFilter"
        >
        <input type="submit" value="Delete" handler = "Delete" class="btn btn-danger" /> 
        <a asp-page="Index" 
        asp-page-handler="Index" 
        asp-route-order="@Model.CurrentSort"
        asp-route-idx = "@Model.PageIndex"
        asp-route-filter="@Model.CurrentFilter"
        >Back to List</a>
    </form>
</div>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}